{
  "version": "1.0",

  "time": {
    "$resolver": "timestamp",
    "pattern": "yyyy-MM-dd'T'HH:mm:ss,SSSXXX",
    "timeZone": "Europe/Moscow"
  },

  "level": {
    "$resolver": "level",
    "field": "name"
  },

  "thread": {
    "$resolver": "thread",
    "field": "name"
  },

  "class": {
    "$resolver": "logger",
    "field": "name"
  },

  "message": {
    "$resolver": "message",
    "stringified": true
  },

  "exception": {
    "$resolver": "exception",
    "field": "stackTrace",
    "stackTrace": {
      "stringified": true
    }
  }
}